@model ClassicGarageArkBar.Models.PartsModels

@{
    ViewBag.Title = "Part Details";
}

<div class="row panel panel-primary">
    <div class="panel-heading">
        <h5> @Model.Name</h5>
    </div>
    <div class="panel-body col-sm-8 ">
        <div class="row">
            <label class="control-label col-md-2">Catalog Nr: </label>@Model.CatalogNr <hr />
            <label class="control-label col-md-2">Descrption: </label>@Model.description <hr />
            <label class="control-label col-md-2">Car ID: </label>@Model.IdCar <hr />

            <h4>  Part Price: @Model.SellingPrice $</h4>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <h3>Car part's data:</h3><hr />
                <label class="control-label col-md-2">  Brand:</label>@ViewBag.CarBrand<hr />
                <label class="control-label col-md-2"> Model:</label> @ViewBag.CarModel<hr />
                <label class="control-label col-md-2"> VIN:</label>@ViewBag.CarVIN<hr />
                <label class="control-label col-md-2"> Series:</label> @ViewBag.CarSeries<hr />
            </div>
            <div class="col-lg-4">
                <img src="@ViewBag.PhotoURL" class="img-rounded left" style="object-fit: contain">
            </div>
        </div>
    </div>
</div>


<p>
    @Html.ActionLink("Back to List", "Index")
</p>
