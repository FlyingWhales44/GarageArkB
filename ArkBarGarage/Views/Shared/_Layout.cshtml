<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Garage - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default" style="margin-bottom:30px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("My Garage", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">Add an announcement about <span class="caret"></span></a>
                        <ul class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <li>
                                <a class="dropdown-item">
                                    @if (Request.IsAuthenticated)
                                    {@Html.ActionLink("Cars", "Create", "CarsModels")
                                }
                                else
                                {@Html.ActionLink("Cars", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })}
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item">
                                    @if (Request.IsAuthenticated)
                                    {
                                        @Html.ActionLink("Parts", "Create", "PartsModels")}
                                    else
                                    {@Html.ActionLink("Parts", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })}
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item">
                                    @if (Request.IsAuthenticated)
                                    {
                                        @Html.ActionLink("Repairs", "Create", "RepairsModels")}
                                    else
                                    {@Html.ActionLink("Repairs", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })}
                                </a>
                            </li>
                        </ul>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">I'm looking for <span class="caret"></span></a>
                        <ul class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <li><a class="dropdown-item">@Html.ActionLink("Cars", "Index", "CarsModels")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Parts", "Index", "PartsModels")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("Repairs", "Index", "RepairsModels")</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown">My announcements <span class="caret"></span></a>
                        <ul class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <li><a class="dropdown-item">@Html.ActionLink("My Cars", "MyIndex", "CarsModels")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("My Parts", "MyIndex", "PartsModels")</a></li>
                            <li><a class="dropdown-item">@Html.ActionLink("My Repairs", "MyIndex", "RepairsModels")</a></li>
                        </ul>
                    </li>

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
