@model IEnumerable<ClassicGarageArkBar.Models.CarsModels>

@{
    ViewBag.Title = "My Cars";
}
@foreach (var m in Model)
{
    <div class="row panel panel-primary">
        <div class="panel-heading">
            <h5> @m.Brand</h5>
        </div>
        <div class="panel-body col-sm-8 ">
            <label class="control-label col-md-2"> Model:</label> @m.Model <hr />
            <label class="control-label col-md-2">Year of production:</label> @m.YearOfProduction <hr />
            <label class="control-label col-md-2">Vin:</label> @m.VIN <hr />
            <label class="control-label col-md-2">Description:</label> @m.Description<hr />

            @Html.ActionLink("Edit", "Edit", new { id = m.ID }) <hr />
            @Html.ActionLink("Delete", "Delete", new { id = m.ID })<hr />
            @Html.ActionLink("Details", "Details", new { id = m.ID })<hr />
            <h4>  Price: @m.SellingPrice $</h4>
        </div>

        <div class="col-sm-4">
            <img src="@m.PhotoURL" class="img-rounded left" style="height: 100%; width: 100%; object-fit: contain">
        </div>
    </div>
}





